@model Tomorowland.ViewModels.LoginViewModel

<div class="container">
<br />
<div class="row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
        <form method="post" asp-controller="Account" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Email">Електронна пошта</label>
                <input type="text" class="form-control" placeholder="johndou@example.com" asp-for="Email">
            </div>
            <div class="form-group">
                <label asp-for="Password">Пароль</label>
                <input type="password" class="form-control" placeholder="********" asp-for="Password">
            </div>
            <label asp-for="RememberMe"></label>
            <input asp-for="RememberMe" /><br />
            <button type="submit" class="btn btn-primary">Авторизуватися</button>
        </form>
    </div>
    <div class="col-sm-4">
    </div>
</div>
</div>