@model Tomorowland.ViewModels.RegisterViewModel
<div class="row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
        <h2>Реєстрація нового користувача</h2>
        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Name">Ім'я</label>
                <input type="text" class="form-control" placeholder="John" asp-for="Name">
            </div>
            <div class="form-group">
                <label asp-for="Last_name">Прізвище</label>
                <input type="text" class="form-control" placeholder="Dou" asp-for="Last_name">
            </div>
            <div class="form-group">
                <label asp-for="Email">Електронна пошта</label>
                <input type="text" class="form-control" placeholder="johndou@example.com" asp-for="Email">
            </div>
            <div class="form-group">
                <label asp-for="Password">Пароль</label>
                <input type="password" class="form-control" placeholder="********" asp-for="Password">
            </div>
            <div class="from-group">
                <label asp-for="PasswordConfirm"></label><br />
                <input asp-for="PasswordConfirm"  class="form-control" placeholder="********"    />
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
            <button type="submit" class="btn btn-primary">Зареєструватися</button>
        </form>
        <div class="col-sm-4">
        </div>
    </div>
</div>